<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Attendance Report</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:400,500,600,700&display=swap">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background-color: #f2f2f2;
    }
    .container {
      width: 80%;
      background-color: #fff;
      padding: 20px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }
    .table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    .table th,
    .table td {
      padding: 10px;
      border-bottom: 1px solid #ddd;
      text-align: left;
    }
    .table th {
      background-color: #f2f2f2;
      font-weight: 600;
    }
    .table td {
      font-size: 14px;
    }
    .text-center {
      text-align: center;
    }
    .text-bold {
      font-weight: 600;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="text-center">Student Attendance Report</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Roll No</th>
          <th>UID</th>
          <th>Department</th>
          <th>Course ID</th>
          <th>Date</th>
          <th>Present</th>
        </tr>
      </thead>
      <tbody>
        <% students.forEach(student => { %>
          <% student.attendance.forEach(att => { %>
            <tr>
              <% if (student.attendance.indexOf(att) === 0) { %>
                <td rowspan="<%= student.attendance.length %>"><%= student.name %></td>
                <td rowspan="<%= student.attendance.length %>"><%= student.rollNo %></td>
                <td rowspan="<%= student.attendance.length %>"><%= student.uid %></td>
                <td rowspan="<%= student.attendance.length %>"><%= student.department %></td>
              <% } %>
              <td><%= att.courseId %></td>
              <td><%= new Date(att.date).toLocaleDateString() %></td>
              <td class="text-center"><%= att.present ? 'Yes' : 'No' %></td>
            </tr>
          <% }); %>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
